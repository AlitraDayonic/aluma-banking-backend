# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aluma_db
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_ACCESS_SECRET=your_jwt_access_secret_change_this
JWT_REFRESH_SECRET=your_jwt_refresh_secret_change_this
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ============================================
# ENCRYPTION
# ============================================
ENCRYPTION_KEY=your_32_character_encryption_key_change_this
BCRYPT_ROUNDS=12

# ============================================
# REDIS CONFIGURATION (for Bull queues)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGIN=http://localhost:3001

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# SENDGRID EMAIL CONFIGURATION
# ============================================
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@aluma.com
FROM_NAME=Aluma Banking
FRONTEND_URL=http://localhost:3001

# ============================================
# MARKET DATA API - ALPHA VANTAGE
# ============================================
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# Alternative: Polygon.io
# POLYGON_API_KEY=your_polygon_api_key

# Alternative: Finnhub
# FINNHUB_API_KEY=your_finnhub_api_key

# ============================================
# FILE UPLOAD
# ============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# ============================================
# APPLICATION
# ============================================
APP_NAME=Aluma Banking
SUPPORT_EMAIL=support@aluma.com

# ============================================
# PAYMENT GATEWAY (Optional - for future)
# ============================================
# STRIPE_SECRET_KEY=your_stripe_secret_key
# STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
# STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ============================================
# KYC VERIFICATION (Optional - Third-party)
# ============================================
# JUMIO_API_TOKEN=your_jumio_api_token
# JUMIO_API_SECRET=your_jumio_api_secret

# ============================================
# SMS NOTIFICATIONS (Optional - Twilio)
# ============================================
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# MONITORING (Optional)
# ============================================
# SENTRY_DSN=your_sentry_dsn
# NEW_RELIC_LICENSE_KEY=your_new_relic_key

# ============================================
# TESTING
# ============================================
TEST_DB_NAME=aluma_test_db